package ATIV_CLASSE_ABSTRATAS_LUCASDESOUSASANTOS;

public class Funcionario extends Pessoa {
	private String Cargo;
	private Double Salario;
	private String Turno;
	
	public String getCargo() {
		return Cargo;
	}
	public void setCargo(String cargo) {
		Cargo = cargo;
	}
	public Double getSalario() {
		return Salario;
	}
	public void setSalario(Double salario) {
		Salario = salario;
	}
	public String getTurno() {
		return Turno;
	}
	public void setTurno(String turno) {
		Turno = turno;
	}
	
	public void cadastroNome(String Nome) {
		if(Nome.length() >= 200) {
			cadastroNome(Nome);
		}
		else {
			System. out.println("Nome Inválido");
		}
	}
	public void cadastroTelefone(String Telefone) {
		if(Telefone.length() >= 9) {
			cadastroTelefone(Telefone);
		}
		else {
			System.out.println("Telefone inválido");
		}
	}
	public void cadastrooRg(String Rg) {
		if(Rg.length() >= 10) {
			cadastroTelefone(Rg);
		}
		else {
			System.out.println("RG inválido");
		}
	}
	public void cadastroCpf(String Cpf) {
		if(Cpf.length() >= 11) {
			cadastroCpf(Cpf);
		}
		else {
			System. out.println("CPF Inválido");
		}
	}
	public void cadastroEstadocivil(String Estadocivil) {
		if(Estadocivil.length() >= 8) {
			cadastroTelefone(Estadocivil);
		}
		else {
			System.out.println("Estado civil inválido");
		}
	}
	public void cadastroSexo(String Sexo) {
		if(Sexo.length() >= 9) {
			cadastroSexo(Sexo);
		}
		else {
			System.out.println("Sexo inválido");
		}
	}
}